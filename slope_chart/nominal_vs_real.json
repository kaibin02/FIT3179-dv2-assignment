{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Nominal vs Real Median Income by State (2022)",
  "width": 500,
  "height": 400,
  "data": {"url": "/FIT3179-dv2-assignment/income_cpi_analysis.csv"},
  "transform": [
    {
      "filter": "datum.year == 2022"
    },
    {
      "aggregate": [{
        "op": "mean",
        "field": "income_median",
        "as": "income_median"
      }, {
        "op": "mean",
        "field": "income_median_real",
        "as": "income_median_real"
      }, {
        "op": "mean",
        "field": "mean_median_gap_pct",
        "as": "mean_median_gap"
      }],
      "groupby": ["state"]
    },
    {
      "calculate": "datum.income_median - datum.income_median_real",
      "as": "inflation_impact"
    },
    {
      "fold": ["income_median", "income_median_real"],
      "as": ["type", "value"]
    },
    {
      "calculate": "datum.type == 'income_median' ? 'Nominal' : 'Real (Inflation-Adjusted)'",
      "as": "income_type"
    }
  ],
  "encoding": {
    "x": {
      "field": "value",
      "type": "quantitative",
      "title": "Median Income (RM)",
      "axis": {
        "format": ",.0f"
      }
    },
    "y": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "sort": {"field": "inflation_impact", "order": "descending"}
    },
    "color": {
      "field": "income_type",
      "type": "nominal",
      "scale": {
        "domain": ["Nominal", "Real (Inflation-Adjusted)"],
        "range": ["#d73027", "#4575b4"]
      },
      "legend": {
        "title": "Income Type"
      }
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "income_type", "type": "nominal", "title": "Type"},
      {"field": "value", "type": "quantitative", "title": "Value (RM)", "format": ",.0f"},
      {"field": "inflation_impact", "type": "quantitative", "title": "Inflation Impact (RM)", "format": ",.0f"},
      {"field": "mean_median_gap", "type": "quantitative", "title": "Mean-Median Gap (%)", "format": ".1f"}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "opacity": 0.5
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 100
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "fontSize": 10
      },
      "encoding": {
        "text": {"field": "value", "type": "quantitative", "format": ",.0f"},
        "opacity": {
          "condition": {
            "test": "datum.type == 'income_median'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}