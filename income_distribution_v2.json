{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Distribution of Real Median Income by State (2022)",
    "subtitle": "Shows clustering patterns and outlier states"
  },
  "width": "container",
  "height": 300,
  "data": {"url": "income_cpi_analysis.csv"},
  "transform": [
    {"calculate": "parseInt(slice(datum.date, 0, 4))", "as": "year"},
    {"filter": "datum.year == 2022"},
    {"aggregate": [{"op": "mean", "field": "income_median_real", "as": "income_median_real"}], "groupby": ["state"]}
  ],
  "layer": [
    {
      "mark": {"type": "bar", "color": "#4C78A8", "opacity": 0.6},
      "encoding": {
        "x": {
          "field": "income_median_real",
          "type": "quantitative",
          "title": "Real Median Income (RM)",
          "bin": {"maxbins": 7}
        },
        "y": {"aggregate": "count", "title": "Number of States"},
        "tooltip": [
          {
            "bin": true,
            "field": "income_median_real",
            "type": "quantitative",
            "title": "Income Range (RM)",
            "format": ",.0f"
          },
          {"aggregate": "count", "title": "Number of States"}
        ]
      }
    },
    {
      "transform": [
        {
          "aggregate": [
            {"op": "mean", "field": "income_median_real", "as": "national_mean"}
          ]
        }
      ],
      "resolve": {"scale": {"x": "independent"}},
      "mark": {"type": "rule", "color": "#d73027", "strokeDash": [4, 4]},
      "encoding": {
        "x": {"field": "national_mean", "type": "quantitative"},
        "tooltip": [
          {
            "field": "national_mean",
            "type": "quantitative",
            "title": "National Mean of Medians (RM)",
            "format": ",.0f"
          }
        ]
      }
    },

    {
      "transform": [
        {
          "aggregate": [
            {"op": "mean", "field": "income_median_real", "as": "national_mean"}
          ]
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 5,
        "dy": 20,
        "fontSize": 11,
        "fontStyle": "italic",
        "color": "#d73027"
      },
      "encoding": {
        "x": {"field": "national_mean", "type": "quantitative"},
        "y": {"value": 0},
        "text": {
          "field": "national_mean",
          "type": "quantitative",
          "format": ",.0f"
        }
      }
    },
    {
      "transform": [
        {
          "aggregate": [
            {"op": "mean", "field": "income_median_real", "as": "national_mean"}
          ]
        }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5,
        "fontSize": 11,
        "fontStyle": "italic",
        "color": "#d73027"
      },
      "encoding": {
        "x": {"field": "national_mean", "type": "quantitative"},
        "y": {"value": 20},
        "text": {"value": "National Median"}
      }
    }
  ]
}
