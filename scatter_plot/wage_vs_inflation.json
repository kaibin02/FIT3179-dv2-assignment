{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Wage Growth vs Inflation (2022)",
    "subtitle": "Size indic      "mark": {
        "type": "text",
        "fontSize": 10,
        "font": "Arial"
      },
      "encoding": {
        "x": {"field": "median_real_yoy_pct", "type": "quantitative"},
        "y": {"field": "inflation_yoy_pct", "type": "quantitative"},
        "text": {"field": "state"},
        "dx": {"field": "xOffset"},
        "dy": {"field": "yOffset"},
        "opacity": {
          "condition": {
            "test": "datum.isOutlier",
            "value": 1
          },
          "value": 0
        }
      }lity (mean-median gap), color shows region"
  },
  "width": 600,
  "height": 400,
  "data": {"url": "../income_cpi_analysis.csv"},
  "transform": [
    {
      "filter": "year(datum.date) == 2022"
    },
    {
      "calculate": "if(datum.state == 'W.P. Kuala Lumpur' || datum.state == 'Selangor' || datum.state == 'Pulau Pinang' || datum.state == 'Melaka' || datum.state == 'Negeri Sembilan', 'Central & Developed', if(datum.state == 'Kedah' || datum.state == 'Perlis' || datum.state == 'Perak', 'Northern', if(datum.state == 'Kelantan' || datum.state == 'Terengganu' || datum.state == 'Pahang', 'East Coast', if(datum.state == 'Sabah' || datum.state == 'Sarawak' || datum.state == 'W.P. Labuan', 'East Malaysia', 'Southern'))))",
      "as": "region"
    },
    {
      "calculate": "abs(datum.median_real_yoy_pct) > 20 || abs(datum.inflation_yoy_pct) > 8",
      "as": "isOutlier"
    },
    {
      "calculate": "datum.median_real_yoy_pct > datum.inflation_yoy_pct ? 15 : -15",
      "as": "xOffset"
    },
    {
      "calculate": "datum.median_real_yoy_pct > 0 ? -10 : 10",
      "as": "yOffset"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "color": "#ccc",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {"datum": 0}
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#ccc",
        "strokeWidth": 1
      },
      "encoding": {
        "y": {"datum": 0}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "dx": -5,
        "dy": 5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 295},
        "y": {"value": 5},
        "text": {"value": "Growing but not beating inflation"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 5,
        "dy": 5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 305},
        "y": {"value": 5},
        "text": {"value": "Beating inflation"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": -5,
        "dy": -5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 295},
        "y": {"value": 395},
        "text": {"value": "Declining faster than inflation"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"value": 305},
        "y": {"value": 395},
        "text": {"value": "Declining but better than inflation"}
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "x": {
          "field": "median_real_yoy_pct",
          "type": "quantitative",
          "title": "Real Wage Growth (%)",
          "scale": {"domain": [-30, 35]},
          "axis": {"grid": false}
        },
        "y": {
          "field": "inflation_yoy_pct",
          "type": "quantitative",
          "title": "Inflation Rate (%)",
          "scale": {"domain": [-2, 12]},
          "axis": {"grid": false}
        },
        "size": {
          "field": "mean_median_gap_pct",
          "type": "quantitative",
          "title": "Income Inequality (Mean-Median Gap %)",
          "scale": {"range": [100, 1000]}
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "title": "Region",
          "scale": {
            "domain": ["Central & Developed", "Northern", "East Coast", "Southern", "East Malaysia"],
            "range": ["#1f77b4", "#2ca02c", "#d62728", "#ff7f0e", "#9467bd"]
          }
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "median_real_yoy_pct", "type": "quantitative", "title": "Real Wage Growth (%)", "format": ".1f"},
          {"field": "inflation_yoy_pct", "type": "quantitative", "title": "Inflation Rate (%)", "format": ".1f"},
          {"field": "mean_median_gap_pct", "type": "quantitative", "title": "Income Inequality (%)", "format": ".1f"},
          {"field": "region", "type": "nominal", "title": "Region"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "fontSize": 10
      },
      "encoding": {
        "x": {"field": "median_real_yoy_pct", "type": "quantitative"},
        "y": {"field": "inflation_yoy_pct", "type": "quantitative"},
        "text": {"field": "state", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "abs(datum.median_real_yoy_pct) > 10 || abs(datum.inflation_yoy_pct) > 6",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"}
  }
}