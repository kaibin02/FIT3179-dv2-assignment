{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "State Rankings by Real Median Income (2012-2022)",
  "width": 800,
  "height": 500,
  "data": {"url": "../income_cpi_analysis.csv"},
  "params": [
    {
      "name": "selectedState",
      "value": "",
      "bind": {"name": "Highlight state: ", "input": "select", "options": ["", "Johor", "Kedah", "Kelantan", "Melaka", "Negeri Sembilan", "Pahang", "Perak", "Perlis", "Pulau Pinang", "Sabah", "Sarawak", "Selangor", "Terengganu", "W.P. Kuala Lumpur", "W.P. Labuan", "W.P. Putrajaya"]}
    }
  ],
  "transform": [
    {
      "aggregate": [{
        "op": "mean",
        "field": "income_median_real",
        "as": "income_median_real"
      }],
      "groupby": ["state", "year"]
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [
        {"field": "year", "order": "ascending"},
        {"field": "income_median_real", "order": "descending"}
      ],
      "groupby": ["year"]
    },
    {
      "calculate": "15.5 - datum.rank",
      "as": "y_value"
    },
    {
      "calculate": "selectedState === '' || datum.state === selectedState ? 1 : 0.2",
      "as": "opacity"
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "sort": [2012, 2014, 2016, 2018, 2019, 2020, 2022],
      "axis": {
        "labelAngle": 0
      }
    },
    "y": {
      "field": "y_value",
      "type": "quantitative",
      "title": "Rank",
      "axis": {
        "values": [14.5, 13.5, 12.5, 11.5, 10.5, 9.5, 8.5, 7.5, 6.5, 5.5, 4.5, 3.5, 2.5, 1.5, 0.5],
        "labelExpr": "15.5 - datum.value < 1 ? 1 : 15.5 - datum.value > 15 ? 15 : floor(15.5 - datum.value)"
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2
      },
      "encoding": {
        "color": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "scale": {"scheme": "category20"}
        },
        "opacity": {
          "field": "opacity"
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "rank", "type": "quantitative", "title": "Rank"},
          {"field": "income_median_real", "type": "quantitative", "title": "Real Median Income (RM)", "format": ",.0f"}
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "size": 50
      },
      "encoding": {
        "color": {
          "field": "state",
          "type": "nominal"
        },
        "opacity": {
          "field": "opacity"
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "rank", "type": "quantitative", "title": "Rank"},
          {"field": "income_median_real", "type": "quantitative", "title": "Real Median Income (RM)", "format": ",.0f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 8,
        "fontSize": 10
      },
      "transform": [
        {
          "filter": "datum.year == 2022"
        }
      ],
      "encoding": {
        "text": {"field": "state"},
        "color": {"field": "state", "type": "nominal"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -8,
        "fontSize": 10
      },
      "transform": [
        {
          "filter": "datum.year == 2012"
        }
      ],
      "encoding": {
        "text": {"field": "state"},
        "color": {"field": "state", "type": "nominal"}
      }
    }
  ]
}