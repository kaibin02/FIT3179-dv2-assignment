  "title": {
    "text": "Real Income Growth Trajectories (2012-2022, Base Year 2012=100)",
    "fontSize": 14,
    "anchor": "middle"
  },
    "data": {"url": "/FIT3179-dv2-assignment/income_cpi_analysis.csv"},
  "transform": [
    {
      "filter": {
        "field": "state",
        "oneOf": [
          "W.P. Kuala Lumpur", "Selangor", "Kelantan",
          "Sabah", "Sarawak", "Pulau Pinang"
        ]
      }
    }
  ],
