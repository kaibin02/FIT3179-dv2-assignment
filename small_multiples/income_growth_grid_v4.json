    {
      "hconcat": [
        {
          "title": {"text": "W.P. Kuala Lumpur (Highest Growth)", "fontSize": 12},
          "transform": [{"filter": "datum.state == 'W.P. Kuala Lumpur'"}],
          "width": 160,
          "height": 130,
          "mark": {"type": "line", "point": true},
          "encoding": {
            "x": {
              "field": "year",
              "type": "ordinal",
              "title": "Year",
              "axis": {"labelAngle": -45, "labelFontSize": 10}
            },
            "y": {
              "field": "income_median_real_indexed",
              "type": "quantitative",
              "title": "Growth Index",
              "scale": {"domain": [80, 160]},
              "axis": {"labelFontSize": 10}
            },
            "color": {"value": "#4e79a7"},
