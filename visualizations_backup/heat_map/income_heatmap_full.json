{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Malaysia Median Household Income by State (1970-2022)",
  "width": {"step": 40},
  "height": {"step": 25},
  "data": {"url": "../hh_income_state.csv"},
  "transform": [
    {
      "calculate": "year(datum.date)",
      "as": "year"
    }
  ],
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": -45
      }
    },
    "y": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "sort": "-x"
    },
    "color": {
      "field": "income_median",
      "type": "quantitative",
      "title": "Median Income (RM)",
      "scale": {
        "scheme": "blues",
        "domainMin": 0,
        "nice": true
      }
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "year", "type": "ordinal", "title": "Year"},
      {"field": "income_median", "type": "quantitative", "title": "Median Income (RM)", "format": ",.0f"},
      {"field": "income_mean", "type": "quantitative", "title": "Mean Income (RM)", "format": ",.0f"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFontSize": 11, "titleFontSize": 12},
    "legend": {"labelFontSize": 11, "titleFontSize": 12}
  }
}