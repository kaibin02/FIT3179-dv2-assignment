{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Malaysia Median Household Income by State (2012-2022)",
  "width": {"step": 50},
  "height": {"step": 25},
  "data": {"url": "../income_2012-2022.csv"},
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "date",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "state",
      "type": "nominal",
      "title": "State",
      "sort": "-x"
    },
    "color": {
      "field": "income_median",
      "type": "quantitative",
      "title": "Median Income (RM)",
      "scale": {
        "scheme": "blues",
        "domainMin": 0
      }
    },
    "tooltip": [
      {"field": "state", "type": "nominal", "title": "State"},
      {"field": "date", "type": "ordinal", "title": "Year"},
      {"field": "income_median", "type": "quantitative", "title": "Median Income (RM)", "format": ",.0f"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFontSize": 11, "titleFontSize": 12},
    "legend": {"labelFontSize": 11, "titleFontSize": 12}
  }
}