{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "State Rankings by Median Household Income (1970-2022)",
  "width": 800,
  "height": 500,
  "name": "ranking_vis",
  "data": {"url": "../hh_income_state.csv"},
  "transform": [
    {
      "calculate": "year(datum.date)",
      "as": "year"
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [
        {"field": "year", "order": "ascending"},
        {"field": "income_median", "order": "descending"}
      ],
      "groupby": ["year"]
    },
    {
      "calculate": "15.5 - datum.rank",
      "as": "y_value"
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelAngle": -45
      }
    },
    "y": {
      "field": "y_value",
      "type": "quantitative",
      "title": "Rank",
      "axis": {
        "values": [14.5, 13.5, 12.5, 11.5, 10.5, 9.5, 8.5, 7.5, 6.5, 5.5, 4.5, 3.5, 2.5, 1.5, 0.5],
        "labelExpr": "15.5 - datum.value < 1 ? 1 : 15.5 - datum.value > 15 ? 15 : floor(15.5 - datum.value)"
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3,
        "cornerRadius": 5
      },
      "encoding": {
        "color": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "scale": {"scheme": "category20"}
        },
        "size": {
          "condition": {
            "param": "ranking_highlight",
            "empty": false,
            "value": 4
          },
          "value": 2
        },
        "opacity": {
          "condition": {
            "param": "ranking_highlight",
            "empty": false,
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "rank", "type": "quantitative", "title": "Rank"},
          {"field": "income_median", "type": "quantitative", "title": "Median Income (RM)", "format": ",.0f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 8
      },
      "encoding": {
        "text": {"field": "state"},
        "color": {"field": "state", "type": "nominal"},
        "opacity": {
          "condition": {
            "test": "datum.year == 2022",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "params": [{
    "name": "ranking_highlight",
    "value": [],
    "select": {
      "type": "point",
      "fields": ["state"],
      "toggle": false,
      "clear": "mouseout"
    }
  }],
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFontSize": 11, "titleFontSize": 12},
    "legend": {"labelFontSize": 11, "titleFontSize": 12}
  }
}