{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Median household income by state (2012-2022)",
  "title": {
    "text": "Median Household Income by State, Malaysia (2022)",
    "subtitle": "Data source: Department of Statistics Malaysia",
    "font": "Garamond",
    "fontSize": 16
  },
  "width": 600,
  "height": 700,
  "data": {
    "url": "choropleth_map/malaysia_states.json",
    "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
  },
  "projection": {
    "type": "conicEqualArea",
    "center": [110, 2],
    "parallels": [1, 6]
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": { "url": "income_2012-2022.csv" },
        "key": "state",
        "fields": ["date", "income_median"]
      }
    },
    {
      "filter": "datum.date == '2022'"
    },
    {
      "calculate": "parseFloat(datum.income_median)",
      "as": "income_value"
    }
  ],
  "mark": { "type": "geoshape", "stroke": "#ffffff", "strokeWidth": 0.6 },
  "encoding": {
    "color": {
      "field": "income_value",
      "type": "quantitative",
      "title": "Median Income (RM)",
      "scale": {
        "scheme": "blues",
        "domainMin": 2000,
        "domainMax": 12000,
        "clamp": true
      },
      "condition": {"test": "!datum.income_value", "value": "#f0f0f0"}
    },
    "tooltip": [
      { "field": "properties.name", "title": "State" },
      { "field": "income_value", "title": "Median Income (RM)", "format": ",.0f" }
    ]
  },
  "config": {
    "legend": { "titleFont": "Open Sans", "labelFont": "Open Sans" },
    "axis": { "labelFont": "Open Sans", "titleFont": "Open Sans" }
  }
}