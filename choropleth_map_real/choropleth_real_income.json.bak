{
  "$schema":    "data": {
    "url": "../choropleth_map/malaysia_states.json",
    "format": {
      "type": "topojson",
      "feature": "ne_10m_admin_1_states_provinces"
    }
  },:/    "transform": [
    {
      "lookup": "properties.NAME_1",
      "from": {
        "data": {
          "url": "../income_cpi_analysis.csv"
        },
        "key": "state",
        "fields": ["income_median_real", "income_median", "year"]
      }
    },b.io/schema/vega-lite/v5.json",
  "title": "Real Median Income by State (Adjusted for Inflation)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "../choropleth_map/malaysia_states.json",
    "format": {
      "type": "topojson",
      "feature": "layer1"
    }
  },
  "params": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [2012, 2014, 2016, 2019, 2020, 2022],
        "labels": ["2012", "2014", "2016", "2019", "2020", "2022"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "properties.state",
      "from": {
        "data": {
          "url": "income_cpi_analysis.csv"
        },
        "key": "state",
        "fields": ["income_median_real", "income_median", "year"]
      }
    },
    {
      "filter": "datum.year == year_select"
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "#ffffff",
    "strokeWidth": 1
  },
  "encoding": {
    "fill": {
      "field": "income_median_real",
      "type": "quantitative",
      "title": "Real Median Income (RM)",
      "scale": {
        "type": "linear",
        "scheme": "blues"
      }
    },
    "tooltip": [
      {"field": "properties.state", "type": "nominal", "title": "State"},
      {"field": "income_median_real", "type": "quantitative", "title": "Real Median Income (RM)", "format": ",.0f"},
      {"field": "income_median", "type": "quantitative", "title": "Nominal Median Income (RM)", "format": ",.0f"}
    ]
  }
}